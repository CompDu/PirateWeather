<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="PirateWeather.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:PirateWeather.Views"
    Shell.FlyoutBehavior="Disabled">


    
    <TabBar>
        <Tab Title="Today">
            <ShellContent ContentTemplate="{DataTemplate views:TodayForecastView}"/>
        </Tab>
        <Tab Title="Daily">
            <ShellContent ContentTemplate="{DataTemplate views:DailyForecastView}"/>
        </Tab>
    </TabBar>

</Shell>
